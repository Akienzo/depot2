<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to '閲覧', order %></td>
        <td><%= link_to '編集', edit_order_path(order) %></td>
        <td><%= link_to '消去', order, method: :delete, data: { confirm: 'Are you sure?本当に消去しても大丈夫ですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいオーダーへ', new_order_path %>
<p><%= will_paginate @orders %></p>
